<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="#111"
            android:textSize="15sp"
            android:id="@+id/place_title_label"
            android:text="@string/place_title_label_string"
            android:layout_margin="5dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111"
            android:textSize="20sp"
            android:layout_toEndOf="@id/place_title_label"
            android:id="@+id/place_title"
            android:layout_margin="5dp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#111"
            android:textSize="20sp"
            android:layout_below="@id/place_title_label"
            android:id="@+id/place_desc"
            android:layout_margin="5dp"/>

    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/place_desc"
            android:scaleType="fitCenter"
            android:id="@+id/place_img"
            android:layout_margin="5dp"/>

    <Button
            android:background="@drawable/round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/place_desc"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            android:text="@string/show_place_on_map"
            android:layout_margin="5dp"/>
</RelativeLayout>